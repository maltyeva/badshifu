
<div class="parallax">
  <div class="banner">
    <div class="banner-content">
      <h1>Find the best shifu in Shanghai</h1>
      <p>(and the worst)</p>
      <%= form_tag(industries_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search " %>
  <%= submit_tag "Search", class: "btn btn-primary btn-lg" %>
  <% end %>
    </div>
  </div>
</div>

<h1 class="page-title">See all </h1>


<div class="container">
  <div class="row">
    <% @industries.each do |i| %>
    <div class="col-xs-12 col-sm-4">
      <!-- insert <div class="card"> -->
      <%= link_to shifus_path(i) do %> 
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path i.photo.path %>);">
        <div class="card-category">Popular</div>
          <div class="card-description">
            <h2><%= i.description %></h2>
          </div>
<!--           <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay"> -->
        </div>
        <% end %>
     </div>
    <% end %>
</div>
</div>

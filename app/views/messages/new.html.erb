<div class="container">
	<div class="row">
		<div class="col col-xs-12 col-sm-4 col-sm-offset-4">
			<h3>Leave a Message</h3>
			<%= simple_form_for @message, url: contact_url do |f|%>
			<%= f.input :name, placeholder: "Bruce Willis" %>
			<%= f.input :email, placeholder: "yipee@kayay.com" %>
			<%= f.input :content, as: :text, placeholder: "Leave a message :)" %>
			<%= f.submit "Send", class: "btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>
